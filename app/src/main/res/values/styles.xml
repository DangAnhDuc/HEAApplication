<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="android:editTextColor">@android:color/black</item>
    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/borderColor</item>
        <item name="android:textColorPrimary">@color/borderColor</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorPrimary</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:dialogCornerRadius">15dp</item>
        <item name="android:background">@drawable/gradient</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:dialogCornerRadius" tools:targetApi="p">15dp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/tab_indicator_gray</item>
        <item name="colorPrimaryDark">@color/card_background</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>



    <style name="HintTextStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">15sp</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
    </style>


    <style name="SpotsDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Updatingâ€¦</item>
        <item name="DialogSpotColor">@color/colorPrimaryDark</item>
        <item name="DialogSpotCount">5</item>

    </style>

</resources>
